    <Spinner
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/watersensorimg"
        android:layout_below="@id/waterlbl"
        android:id="@+id/numberwatersensor"
        android:entries="@array/filternumber"
        ></Spinner> -->
   

</RelativeLayout>
